<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %> error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>

<div class="form-group">
  <%= f.label :title, "Name", class: "d-block" %>
  <%= f.text_field :name, class: "form-control" %>
</div>
  
<div class="form-group">
  <%= f.label :user_image, "Image", class: "d-block" %>
  <input class="form-control-file user_image" accept="image/*" type="file" name="user[profile_image]" id="user_profile_image">
<!--%= f.file_field :user_image, placeholder: "プロフィール画像", accept: "image/*" %>-->
</div>
      
<div class="form-group">
  <%= f.label :text, "Introduction", class: "d-block" %>
  <%= f.text_field :introduction, class: "form-control" %>
</div>
  
<div class="form-group">
  <%= f.submit 'Update User', class: "btn btn-secondary" %>
</div>

<% end%>

    </div>
  </div>
</div>