<p id="notice">You have created book successfully.</p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'users/info', user: @user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %></br>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title,book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
            <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_67646" %>
            </td>
            <td>
            <%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger destroy_book_67648", method: :delete, "data-confirm" => "本当に消しますか？" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>